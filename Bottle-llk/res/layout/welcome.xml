    <LinearLayout 
        android:id="@+id/level"
        android:background="@drawable/level_bg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="5dp"
	    android:gravity="center">
        <ImageView 
            android:background="@drawable/level"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   />
          <ImageView 
            android:id="@+id/num_one"
            android:scaleType="fitXY"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   />
           <ImageView 
            android:id="@+id/num_two"
            android:scaleType="fitXY"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   />
    </LinearLayout>
    
    <SeekBar
    	android:id="@+id/timer"
    	android:layout_below="@drawable/level"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:visibility="visible"
    	android:layout_marginTop="38dip"
    	android:paddingLeft="20dip"
    	android:paddingRight="20dip"
    	android:layout_marginBottom="5dip"
    	android:progressDrawable="@layout/seekbar_img"  
        style="?android:attr/progressBarStyleHorizontal"   
        android:thumb="@null"
    	/>
    
 
    <com.xiudekeji.view.GameView
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/game_view"
    	android:visibility="gone"
    	android:layout_below="@id/timer"
    />
    

    <RelativeLayout
        		android:id="@+id/bottom" 
        		android:orientation="horizontal"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_alignParentBottom="true"
    			android:layout_centerHorizontal="true"
    			android:background="@drawable/bottom_bg"
    			>
    	 <ImageButton android:id="@+id/pause_btn"
	    			android:background="@drawable/game_pause_selector"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_alignParentLeft="true"
	    			android:layout_marginLeft="15dp"
	    			/>
    	 
   	  <LinearLayout android:orientation="horizontal"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_alignParentRight="true"
   			android:layout_marginRight="18dp"
   			>
		    <ImageButton android:id="@+id/refresh_btn"
		    			android:background="@drawable/game_refresh_selector"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			/>
		    <TextView android:id="@+id/text_refresh_num"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:background="@drawable/shape"
		    			android:textColor="@android:color/white"
		    			android:text="1"
		    			android:textSize="12sp"/>
		    <ImageButton android:id="@+id/tip_btn"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:background="@drawable/game_tip_selector"
		    			/>
	     	<TextView android:id="@+id/text_tip_num"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:background="@drawable/shape"
		    			android:textColor="@android:color/white"
		    			android:text="1"
		    			android:textSize="12sp"/>
	     	<ImageButton android:id="@+id/find_btn"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:background="@drawable/game_find_selector"
		    			/>
	     	<TextView android:id="@+id/text_find_num"
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:background="@drawable/shape"
		    			android:textColor="@android:color/white"
		    			android:text="1"
		    			android:textSize="12sp"/>
      </LinearLayout>	
    </RelativeLayout>			
    
