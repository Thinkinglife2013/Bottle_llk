<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/view_dialog"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/pause_bg"
  >
  <RelativeLayout 
      android:layout_gravity="bottom"
      android:layout_marginBottom="15dp"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
  <ImageButton 
			android:id="@+id/play"
			android:background="@drawable/pause_play_selector"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="50dp"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			/>
  <ImageButton 
			android:id="@+id/replay_imgbtn"
			android:background="@drawable/pause_replay_selector"
			android:layout_above="@id/play"
			android:layout_marginLeft="45dip"
			android:layout_marginBottom="15dp"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>
  	<ImageButton 
			android:id="@+id/menu_imgbtn"
			android:background="@drawable/pause_quit_selector"
			android:layout_marginLeft="25dip"
			android:layout_marginBottom="5dp"
			android:layout_toRightOf="@id/replay_imgbtn"
			android:layout_alignBottom="@id/replay_imgbtn"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			/>
  	
  	<ImageView 
             android:id="@+id/game_music"
             android:layout_width="wrap_content"
	   		 android:layout_height="wrap_content"
	   		 android:background="@drawable/laba_yes"
	   		 android:layout_marginLeft="30dp"
	   		 android:layout_marginBottom="35dp"
	   		 android:layout_toRightOf="@id/play"
	   		 android:layout_alignBottom="@id/play"/>
  	  
  	<ImageView 
			android:id="@+id/bg_music"
			android:background="@drawable/music_yes"
			android:layout_marginLeft="5dip"
			android:layout_marginBottom="15dp"
			android:layout_toRightOf="@id/menu_imgbtn"
			android:layout_above="@id/game_music"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			/>
	
  	</RelativeLayout>
</FrameLayout>
